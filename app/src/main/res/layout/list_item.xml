<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="false"
    android:layout_marginLeft="@dimen/margin30"
    android:layout_marginTop="@dimen/margin15"
    android:layout_marginRight="@dimen/margin30"
    android:layout_marginBottom="@dimen/margin"
    android:layout_span="@integer/span20"
    android:background="#FFFFFF"

    android:fadingEdge="horizontal|vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/margin15"
    android:paddingRight="@dimen/margin15"
    android:paddingBottom="@dimen/margin15">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="179dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:background="#C6C2C2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="171dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="164dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/title"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="91dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:text="@string/unDefined"
            app:layout_constraintStart_toStartOf="@+id/rateTextView"
            app:layout_constraintTop_toBottomOf="@+id/rateTextView" />

        <Button
            android:id="@+id/favouritBtn"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/rateTextView"
            android:layout_width="92dp"
            android:layout_height="18dp"
            android:layout_marginTop="28dp"
            android:text="@string/unDefined"
            app:layout_constraintStart_toStartOf="@+id/titleTextView"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>